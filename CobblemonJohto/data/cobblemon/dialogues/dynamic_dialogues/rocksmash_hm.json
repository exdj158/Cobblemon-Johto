{   
    "speakers": {
        "player": {
         "face": "q.player.face(true);",
         "name": {
        "type": "expression",
        "expression": "q.player.username"
      }
    }
      },
    "pages": [
        {
            "id": "greeting",
            "speaker": "player",
            "lines": [
                "This rock appears to be breakable."
            ],
            "input": {
                "type": "option",
                "vertical": false,
                "options": [
                    {
                        "text": "Next",
                        "value": "next",
                        "action": "q.dialogue.set_page('page2');"
                    }
                ]
            }
        },
        {
            "id": "page2",
            "speaker": "player",
            "lines": [
                "Would you like to use Rock Smash?"
            ],
            "input": {
                "type": "option",
                "vertical": false,
                "options": [
                    {
                        "text": "Yes",
                        "value": "yes",
                        "action": "q.dialogue.set_page('page3');"
                    },
                    {
                        "text": "No",
                        "value": "no",
                        "action": "q.dialogue.close();"
                    }
                ]
            }
        },
        {
            "id": "page3",
            "speaker": "player",
            "lines": [
                "You used Rock Smash!"
            ],
            "input": {
                "type": "option",
                "vertical": false,
                "options": [
                    {
                        "text": "Close",
                        "value": "close",
                        "action": [
                            "q.run_command('execute as ' + q.player.username + ' run function johto:hms/rocksmashuse');",
                            "q.dialogue.close();"
                            ]
                    }
                ]
            }
        }
        ]
    }