{
    "speakers": {
        "npc": {
            "name": "Trader Lorenzo",
            "face": {
                "type": "artificial",
                "modelType": "npc",
                "identifier": "cobblemon:scientistm",
                "isLeftSide": true
            }
        },
        "player": {
            "face": "q.player.face();",
            "name": {
                "type": "expression",
                "expression": "q.player.username"
            }
        }
    },
    "pages": [
        {
            "id": "greeting",
            "speaker": "npc",
            "lines": [
                "I collect Pokemon. Do you have Dugtrio? Want to trade it for my Magneton?"
            ],
            "input": {
                "type": "option",
                "vertical": false,
                "options": [
                    {
                        "text": "Yes",
                        "value": "yes",
                        "isSelectable": "q.player.party.count_by_properties(q.npc.config.trade_requested) >= 1",
                        "action": "q.dialogue.set_page('confirmation');"
                    },
                    {
                        "text": "No",
                        "value": "no",
                        "action": "q.dialogue.set_page('okbye');"
                    }
                ]
            }
        },
        {
            "id": "confirmation",
            "speaker": "npc",
            "lines": [
                {
                    "type": "expression",
                    "expression": "'Are you sure you want to trade your Dugtrio?';"
                }
            ],
            "input": {
                "type": "option",
                "vertical": false,
                "options": [
                    {
                        "text": "§b🔁 Trade 🔁§r",
                        "value": "trade",
                        "isSelectable": "q.player.party.count_by_properties(q.npc.config.trade_requested) >= 1",
                        "action": [
                            "q.run_script('pt_trade_pkmn');",
                            "q.dialogue.close();"
                        ]
                    },
                    {
                        "text": "No",
                        "value": "no",
                        "action": "q.dialogue.set_page('okbye');"
                    }
                ]
            }
        },
        {
            "id": "okbye",
            "speaker": "npc",
            "lines": [
                "Alright, see you later!"
            ],
            "input": {
                "type": "option",
                "vertical": false,
                "options": [
                    {
                        "text": "Close",
                        "value": "close",
                        "action": [
                            "q.dialogue.close();"
                        ]
                    }
                ]
            }
        }
    ]
}