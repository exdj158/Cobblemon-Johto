{   "initializationAction": [              
    "q.run_command('scoreboard players set ' + q.player.username + ' BattleStart 7');",
    "q.run_command('execute as ' + q.player.username + ' run function johto:tools/forceclick');"
        ],
    "escapeAction": [              
        ],
    "names": ["Rocket Grunt"],
    "speakers": {
        "npc": {
            "name": {
                "type": "expression",
                "expression": "q.npc.name"
            },
            "face": "q.npc.face();"
        }
    },
    "pages": [
        {
          "id": "greeting",
          "speaker": "npc",
          "lines": ["Humph! I was standing guard up top when some old coot yelled at me. He startled me so much that I fell down here."],
                "input": {
                    "type": "option",
                    "vertical": false,
                    "options": [
                        {
                            "text": "Next",
                            "value": "next",
                            "action": "q.dialogue.set_page('page2');"
                        }
                    ]
                }
            },
        {
            "id": "page2",
            "speaker": "npc",
            "lines": [
                "How about I vent my anger and take it out on you!"
            ],
            "input": {
                "type": "option",
                "vertical": false,
                "options": [
                    {
                        "text": "§c⚔ Battle ⚔§r",
                        "value": "battle",
                        "action": [                           
                                    "q.run_command('scoreboard players set ' + q.player.username + ' BattleStart 11');",
                                    "q.run_command('execute as ' + q.player.username + ' run function johto:tools/forceclick');",
                                    "v.battle = q.npc.start_battle(q.player);"
                            ]
                    },
                    {
                        "text": "No",
                        "value": "no",
                        "action": [              
                            "q.run_command('scoreboard players set ' + q.player.username + ' BattleStart 0');",
                            "q.run_command('execute as ' + q.player.username + ' run function johto:tools/forceclick');",
                            "q.dialogue.close();"]
                        }
                    ]
                }
            }
        ]
