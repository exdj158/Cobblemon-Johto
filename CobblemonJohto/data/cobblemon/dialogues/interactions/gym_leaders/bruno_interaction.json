{
    "speakers": {
        "npc": {
            "name": {
                "type": "expression",
                "expression": "q.npc.name"
            },
            "face": "q.npc.face();"
        },
        "player": {
            "face": "q.player.face();",
            "name": {
                "type": "expression",
                "expression": "q.player.username"
            }
        }
    },
    "pages": [
        {
            "id": "greeting",
            "speaker": "npc",
            "lines": [
                "I am Bruno of the Elite Four!"
            ],
            "input": {
                "type": "option",
                "vertical": false,
                "options": [
                    {
                        "text": "Next",
                        "value": "next",
                        "action": "q.dialogue.set_page('page2');"
                    }
                ]
            }
        },
        {
            "id": "page2",
            "speaker": "npc",
            "lines": [
                "Through rigorous training, people and Pokémon can become stronger!"
            ],
            "input": {
                "type": "option",
                "vertical": false,
                "options": [
                    {
                        "text": "Next",
                        "value": "next",
                        "action": "q.dialogue.set_page('page3');"
                    }
                ]
            }
        },
        {
            "id": "page3",
            "speaker": "npc",
            "lines": [
                "I've weight trained with my Pokémon! And that will never change!"
            ],
            "input": {
                "type": "option",
                "vertical": false,
                "options": [
                    {
                        "text": "Next",
                        "value": "next",
                        "action": "q.dialogue.set_page('battle_prompt');"
                    }
                ]
            }
        },
        {
            "id": "battle_prompt",
            "speaker": "npc",
            "lines": [
                "We will grind you down with our superior power! Hoo hah!"
            ],
            "input": {
                "type": "option",
                "vertical": false,
                "options": [
                    {
                        "text": "§c⚔ Battle ⚔§r",
                        "value": "battle",
                        "action": [                           
                                    "q.run_command('scoreboard players set @p BattleStart 12');",
                                    "q.run_command('execute as @p run function johto:tools/forceclick');",
                                    "v.battle = q.npc.start_battle(q.player);"
                            ]
                    },
                    {
                        "text": "No",
                        "value": "no",
                        "action": [              
                            "q.run_command('scoreboard players set @p BattleStart 0');",
                            "q.run_command('execute as @p run function johto:tools/forceclick');",
                            "q.dialogue.close();"]
                        }
                    ]
                }
            }
        ]
    }