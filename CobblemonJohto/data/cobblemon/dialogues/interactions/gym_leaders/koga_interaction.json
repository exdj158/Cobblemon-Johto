{
    "speakers": {
        "npc": {
            "name": {
                "type": "expression",
                "expression": "q.npc.name"
            },
            "face": "q.npc.face();"
        },
        "player": {
            "face": "q.player.face();",
            "name": {
                "type": "expression",
                "expression": "q.player.username"
            }
        }
    },
    "pages": [
        {
            "id": "greeting",
            "speaker": "npc",
            "lines": [
                "Fwahahaha! A mere child like you dares to challenge me?"
            ],
            "input": {
                "type": "option",
                "vertical": false,
                "options": [
                    {
                        "text": "Next",
                        "value": "next",
                        "action": "q.dialogue.set_page('page2');"
                    }
                ]
            }
        },
        {
            "id": "page2",
            "speaker": "npc",
            "lines": [
                "Very well, I shall show you true terror as a ninja master!"
            ],
            "input": {
                "type": "option",
                "vertical": false,
                "options": [
                    {
                        "text": "Next",
                        "value": "next",
                        "action": "q.dialogue.set_page('battle_prompt');"
                    }
                ]
            }
        },
        {
            "id": "battle_prompt",
            "speaker": "npc",
            "lines": [
                "You shall feel the despair of poison and sleep techniques!"
            ],
            "input": {
                "type": "option",
                "vertical": false,
                "options": [
                    {
                        "text": "§c⚔ Battle ⚔§r",
                        "value": "battle",
                        "action": [                           
                                    "q.run_command('scoreboard players set ' + q.player.username + ' BattleStart 12');",
                                    "q.run_command('execute as ' + q.player.username + ' run function johto:tools/forceclick');",
                                    "v.battle = q.npc.start_battle(q.player);"
                            ]
                    },
                    {
                        "text": "No",
                        "value": "no",
                        "action": [              
                            "q.run_command('scoreboard players set ' + q.player.username + ' BattleStart 0');",
                            "q.run_command('execute as ' + q.player.username + ' run function johto:tools/forceclick');",
                            "q.dialogue.close();"]
                        }
                    ]
                }
            }
        ]
    }