{
    "speakers": {
        "npc": {
            "name": {
                "type": "expression",
                "expression": "q.npc.name"
            },
            "face": "q.npc.face();"
        },
        "player": {
            "face": "q.player.face();",
            "name": {
                "type": "expression",
                "expression": "q.player.username"
            }
        }
    },
    "pages": [
        {
            "id": "greeting",
            "speaker": "npc",
            "lines": [
                "I'm Bugsy! I never lose when it comes to bug Pokémon."
            ],
            "input": {
                "type": "option",
                "vertical": false,
                "options": [
                    {
                        "text": "Next",
                        "value": "next",
                        "action": "q.dialogue.set_page('battle_prompt');"
                    }
                ]
            }
        },
        {
            "id": "battle_prompt",
            "speaker": "npc",
            "lines": [
                "My research is going to make me the authority on bug Pokémon!"
            ],
            "input": {
                "type": "option",
                "vertical": false,
                "options": [
                    {
                        "text": "§c⚔ Battle ⚔§r",
                        "value": "battle",
                        "action": "q.dialogue.set_page('battle_start');"
                    },
                    {
                        "text": "No",
                        "value": "no",
                        "action": "q.dialogue.close();"
                    }
                ]
            }
        },
        {
            "id": "battle_start",
            "speaker": "npc",
            "lines": [
                "Let me demonstrate what I've learned from my studies."
            ],
            "input": {
                "type": "option",
                "vertical": false,
                "options": [
                    {
                        "text": "Close",
                        "value": "close",
                        "action": [              
                            "q.run_command('scoreboard players set @p BattleStart 12');",
                            "q.run_command('execute as @p run function johto:tools/forceclick');",
                            "q.dialogue.close();",
                            "v.battle = q.npc.start_battle(q.player);"]
                    }
                ]
            }
        }
    ]
}