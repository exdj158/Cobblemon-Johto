{
    "speakers": {
        "npc": {
            "name": {
                "type": "expression",
                "expression": "q.npc.name"
            },
            "face": "q.npc.face();"
        },
        "player": {
            "face": "q.player.face();",
            "name": {
                "type": "expression",
                "expression": "q.player.username"
            }
        }
    },
    "pages": [
        {
            "id": "greeting",
            "speaker": "npc",
            "lines": [
                "Pokémon have many experiences in their lives, just like we do. I, too, have seen and suffered much in my life."
            ],
            "input": {
                "type": "option",
                "vertical": false,
                "options": [
                    {
                        "text": "Next",
                        "value": "next",
                        "action": "q.dialogue.set_page('battle_prompt');"
                    }
                ]
            }
        },
        {
            "id": "battle_prompt",
            "speaker": "npc",
            "lines": [
                "Since I am your elder, let me show you what I mean. I have been training Pokémon since before you were born. I do not lose easily."
            ],
            "input": {
                "type": "option",
                "vertical": false,
                "options": [
                    {
                        "text": "§c⚔ Battle ⚔§r",
                        "value": "battle",
                        "action": "q.dialogue.set_page('battle_start');"
                    },
                    {
                        "text": "No",
                        "value": "no",
                        "action": "q.dialogue.close();"
                    }
                ]
            }
        },
        {
            "id": "battle_start",
            "speaker": "npc",
            "lines": [
                "I, Pryce - the Winter Trainer - shall demonstrate my power!"
            ],
            "input": {
                "type": "option",
                "vertical": false,
                "options": [
                    {
                        "text": "Close",
                        "value": "close",
                        "action": [              
                            "q.run_command('scoreboard players set ' + q.player.username + ' BattleStart 12');",
                            "q.run_command('execute as ' + q.player.username + ' run function johto:tools/forceclick');",
                            "q.dialogue.close();",
                            "v.battle = q.npc.start_battle(q.player);"]
                    }
                ]
            }
        }
    ]
}