{   "initializationAction": [              
    "q.run_command('scoreboard players set @p BattleStart 2');",
    "q.run_command('execute as @p run function johto:tools/forceclick');"
        ],
    "escapeAction": [              
        "q.run_command('scoreboard players set @p BattleStart 0');",
        "q.run_command('execute as @p run function johto:tools/forceclick');",
        "q.dialogue.close();"
        ],
    "names": ["Stanly"],
    "speakers": {
        "npc": {
            "name": {
                "type": "expression",
                "expression": "q.npc.name"
            },
            "face": "q.npc.face();"
        }
    },
    "pages": [
        {
            "id": "greeting",
            "speaker": "npc",
            "lines": [
                "What? You're saying I was asleep? Show some respect!"
            ],
            "input": {
                "type": "option",
                "vertical": false,
                "options": [
                    {
                        "text": "Next",
                        "value": "next",
                        "action": "q.dialogue.set_page('battle_prompt');"
                    }
                ]
            }
        },
        {
            "id": "battle_prompt",
            "speaker": "npc",
            "lines": [
                "A crewman on duty would never be so unmindful as to take a nap in a place like this! I resent your implication! I challenge you!"
            ],
            "input": {
                "type": "option",
                "vertical": false,
                "options": [
                    {
                        "text": "§c⚔ Battle ⚔§r",
                        "value": "battle",
                        "action": [                           
                                    "q.run_command('scoreboard players set @p BattleStart 11');",
                                    "q.run_command('execute as @p run function johto:tools/forceclick');",
                                    "v.battle = q.npc.start_battle(q.player);"
                            ]
                    },
                    {
                        "text": "No",
                        "value": "no",
                        "action": [              
                            "q.run_command('scoreboard players set @p BattleStart 0');",
                            "q.run_command('execute as @p run function johto:tools/forceclick');",
                            "q.dialogue.close();"]
                        }
                    ]
                }
            }
        ]
    }