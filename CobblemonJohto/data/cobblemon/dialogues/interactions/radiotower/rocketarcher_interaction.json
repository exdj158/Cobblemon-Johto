{   "initializationAction": [              
    "q.run_command('scoreboard players set @p BattleStart 7');",
    "q.run_command('execute as @p run function johto:tools/forceclick');"
        ],
    "escapeAction": [              
        "q.run_command('scoreboard players set @p BattleStart 0');",
        "q.run_command('execute as @p run function johto:tools/forceclick');",
        "q.dialogue.close();"
        ],
    "names": ["Rocket Admin Archer"],
    "speakers": {
        "npc": {
            "name": {
                "type": "expression",
                "expression": "q.npc.name"
            },
            "face": "q.npc.face();"
        }
    },
    "pages": [
        {
            "id": "greeting",
            "speaker": "npc",
            "lines": [
                "Oh? You managed to get this far...?"
            ],
            "input": {
                "type": "option",
                "vertical": false,
                "options": [
                    {
                        "text": "Next",
                        "value": "next",
                        "action": "q.dialogue.set_page('page2');"
                    }
                ]
            }
        },
        {
            "id": "page2",
            "speaker": "npc",
            "lines": [
                "You must be quite the Trainer. We intend to take over this Radio Tower and officially announce our comeback. "
            ],
            "input": {
                "type": "option",
                "vertical": false,
                "options": [
                    {
                        "text": "Next",
                        "value": "next",
                        "action": "q.dialogue.set_page('page3');"
                    }
                ]
            }
        },
        {
            "id": "page3",
            "speaker": "npc",
            "lines": [
                "That should bring our boss Giovanni back from his solitary training."
            ],
            "input": {
                "type": "option",
                "vertical": false,
                "options": [
                    {
                        "text": "Next",
                        "value": "next",
                        "action": "q.dialogue.set_page('page4');"
                    }
                ]
            }
        },
        {
            "id": "page4",
            "speaker": "npc",
            "lines": [
                "We are going to regain our former glory..."
            ],
            "input": {
                "type": "option",
                "vertical": false,
                "options": [
                    {
                        "text": "Next",
                        "value": "next",
                        "action": "q.dialogue.set_page('battle_prompt');"
                    }
                ]
            }
        },
        {
            "id": "battle_prompt",
            "speaker": "npc",
            "lines": [
                "I will not allow you to interfere with our meticulous plans!"
            ],
            "input": {
                "type": "option",
                "vertical": false,
                "options": [
                    {
                        "text": "§c⚔ Battle ⚔§r",
                        "value": "battle",
                        "action": [                           
                                    "q.run_command('scoreboard players set @p BattleStart 11');",
                                    "q.run_command('execute as @p run function johto:tools/forceclick');",
                                    "v.battle = q.npc.start_battle(q.player);"
                            ]
                    },
                    {
                        "text": "No",
                        "value": "no",
                        "action": [              
                            "q.run_command('scoreboard players set @p BattleStart 0');",
                            "q.run_command('execute as @p run function johto:tools/forceclick');",
                            "q.dialogue.close();"]
                        }
                    ]
                }
            }
        ]
    }