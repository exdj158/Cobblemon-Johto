{   "initializationAction": [              
    "q.run_command('scoreboard players set @p BattleStart 2');",
    "q.run_command('execute as @p run function johto:tools/forceclick');"
        ],
    "escapeAction": [              
        "q.run_command('scoreboard players set @p BattleStart 0');",
        "q.run_command('execute as @p run function johto:tools/forceclick');",
        "q.dialogue.close();"
        ],
    "names": ["Rod"],
    "speakers": {
        "npc": {
            "name": {
                "type": "expression",
                "expression": "q.npc.name"
            },
            "face": "q.npc.face();"
        }
    },
    "pages": [
        {
          "id": "greeting",
          "speaker": "npc",
          "lines": ["Ho ho! You some kind of big shot? We'll see what happens if you get pushed around up here. Think you'll stagger and fall?"],
                "input": {
                    "type": "option",
                    "vertical": false,
                    "options": [
                        {
                            "text": "Next",
                            "value": "next",
                            "action": "q.dialogue.set_page('page2');"
                        }
                    ]
                }
            },
        {
            "id": "page2",
            "speaker": "npc",
            "lines": [
                "People here are training night and day to become bird Pokémon masters. Bring it on!"
            ],
            "input": {
                "type": "option",
                "vertical": false,
                "options": [
                    {
                        "text": "§c⚔ Battle ⚔§r",
                        "value": "battle",
                        "action": [                           
                                    "q.run_command('scoreboard players set @p BattleStart 11');",
                                    "q.run_command('execute as @p run function johto:tools/forceclick');",
                                    "v.battle = q.npc.start_battle(q.player);"
                            ]
                    },
                    {
                        "text": "No",
                        "value": "no",
                        "action": [              
                            "q.run_command('scoreboard players set @p BattleStart 0');",
                            "q.run_command('execute as @p run function johto:tools/forceclick');",
                            "q.dialogue.close();"]
                        }
                    ]
                }
            }
        ]
    }