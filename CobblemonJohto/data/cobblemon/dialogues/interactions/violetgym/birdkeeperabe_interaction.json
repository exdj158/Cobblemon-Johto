{   "initializationAction": [              
    "q.run_command('scoreboard players set @p BattleStart 2');",
    "q.run_command('execute as @p run function johto:tools/forceclick');"
        ],
    "escapeAction": [              
        "q.run_command('scoreboard players set @p BattleStart 0');",
        "q.run_command('execute as @p run function johto:tools/forceclick');",
        "q.dialogue.close();"
        ],
    "names": ["Abe"],
    "speakers": {
        "npc": {
            "name": {
                "type": "expression",
                "expression": "q.npc.name"
            },
            "face": "q.npc.face();"
        }
    },
    "pages": [
        {
          "id": "greeting",
          "speaker": "npc",
          "lines": ["I can't believe how ridiculously high this is! But from up here, you can tell what it feels like to be a bird Pokémon!"],
                "input": {
                    "type": "option",
                    "vertical": false,
                    "options": [
                        {
                            "text": "Next",
                            "value": "next",
                            "action": "q.dialogue.set_page('page2');"
                        }
                    ]
                }
            },
        {
            "id": "page2",
            "speaker": "npc",
            "lines": [
                "Let me see if you're good enough to face Falkner!"
            ],
            "input": {
                "type": "option",
                "vertical": false,
                "options": [
                    {
                        "text": "§c⚔ Battle ⚔§r",
                        "value": "battle",
                        "action": [                           
                                    "q.run_command('scoreboard players set @p BattleStart 11');",
                                    "q.run_command('execute as @p run function johto:tools/forceclick');",
                                    "v.battle = q.npc.start_battle(q.player);"
                            ]
                    },
                    {
                        "text": "No",
                        "value": "no",
                        "action": [              
                            "q.run_command('scoreboard players set @p BattleStart 0');",
                            "q.run_command('execute as @p run function johto:tools/forceclick');",
                            "q.dialogue.close();"]
                        }
                    ]
                }
            }
        ]
    }